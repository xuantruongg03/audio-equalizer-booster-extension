{
  "manifest_version": 3,
  "name": "Audio Equalizer & Booster",
  "version": "1.0.0",
  "description": "Enhance audio with a 10-band equalizer, volume booster up to 400%, and dynamic compression for any browser tab.",
  "author": "Audio Tools",
  "permissions": [
    "tabCapture",
    "offscreen",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "default_title": "Audio Equalizer & Booster"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "minimum_chrome_version": "116"
}
