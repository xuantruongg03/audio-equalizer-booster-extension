{
    "manifest_version": 3,
    "name": "Audio Equalizer & Booster Pro",
    "version": "2.3.0",
    "description": "Professional 10-band equalizer with 30+ presets, volume boost up to 800%, 7D auto-pan, spatial audio, per-site settings.",
    "author": "Audio Tools",
    "permissions": ["tabCapture", "offscreen", "storage", "activeTab", "tabs"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        },
        "default_title": "Audio Equalizer & Booster Pro"
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "commands": {
        "toggle-power": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Toggle equalizer on/off"
        },
        "volume-up": {
            "suggested_key": {
                "default": "Ctrl+Shift+Up",
                "mac": "Command+Shift+Up"
            },
            "description": "Increase volume by 10%"
        },
        "volume-down": {
            "suggested_key": {
                "default": "Ctrl+Shift+Down",
                "mac": "Command+Shift+Down"
            },
            "description": "Decrease volume by 10%"
        },
        "reset-flat": {
            "suggested_key": {
                "default": "Ctrl+Shift+0",
                "mac": "Command+Shift+0"
            },
            "description": "Reset to flat EQ"
        }
    },
    "minimum_chrome_version": "116"
}
