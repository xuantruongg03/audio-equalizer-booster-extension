{
    "manifest_version": 3,
    "name": "Audio Equalizer & Booster Pro",
    "version": "2.2.0",
    "description": "Professional 10-band equalizer with 30+ presets, volume boost up to 800%, 7D auto-pan, spatial audio, per-site settings, and real-time visualizer.",
    "author": "Audio Tools",
    "permissions": ["tabCapture", "offscreen", "storage", "activeTab", "tabs"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        },
        "default_title": "Audio Equalizer & Booster Pro"
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "minimum_chrome_version": "116"
}
